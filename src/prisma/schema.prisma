// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password       String
  role           Role      @default(HOMEOWNER)
  homeownerJobs  Job[]     @relation("HomeownerJobs")
  contractorJobs Job[]     @relation("ContractorJobs")
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Job {
  id          String      @id @default(cuid())
  homeowner   User        @relation("HomeownerJobs", fields: [homeownerId], references: [id])
  homeownerId String
  contractor  User        @relation("ContractorJobs", fields: [contractorId], references: [id])
  contractorId String
  title       String
  description String
  status      JobStatus   @default(PENDING)
  milestones  Milestone[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Milestone {
  id          String          @id @default(cuid())
  job         Job             @relation(fields: [jobId], references: [id])
  jobId       String
  title       String
  description String
  amount      Float
  status      MilestoneStatus @default(PENDING)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

enum Role {
  ADMIN
  CONTRACTOR
  HOMEOWNER
}

enum JobStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  DISPUTED
}

enum MilestoneStatus {
  PENDING
  FUNDED
  RELEASED
  REFUNDED
  DISPUTED
}
